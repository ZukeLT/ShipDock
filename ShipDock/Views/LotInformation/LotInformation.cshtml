@model IEnumerable<Lot>

@{
    ViewData["Title"] = "Aikštelių sąrašas";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
<h1 style="color: white;">
    @ViewData["Title"].ToString()
</h1>
<br />
<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th style="color: white;" scope="col">Aikštelės ID</th>
            <th style="color: white;" scope="col">Kodas</th>
            <th style="color: white;" scope="col">X_Dim</th>
            <th style="color: white;" scope="col">Y_Dim</th>
            <th style="color: white;" scope="col">Z_Dim</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lot in Model)
        {
            <tr>
                <td>
                    @lot.ID
                </td>
                <td>
                    @lot.Code
                </td>
                <td>
                    @lot.X_Dim.ToString();
                </td>
                <td>
                    @lot.Y_Dim.ToString();
                </td>
                <td>
                    @lot.Z_Dim.ToString();
                </td>
                <td>
                    <a href="@Url.Action("ViewLotStatistic", "LotInformation", new { id = lot.ID })" class="btn btn-primary">Peržiūrėti Statistiką</a>
                </td>
            </tr>
        }
    </tbody>
</table>
