<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShipDock</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShipDock.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>
<style>
        .dropdown:hover > .dropdown-menu {
            display: block;
        }

        .dropdown-item:hover > .dropdown-menu {
            display: block;
        }

        ul li {
            list-style-type: none;
            display: inline;
        }

        .navbar-nav .nav-link {
            display: inline-block;
        }

        .ml-auto {
            display: inline-block !important;
        }

        .dropdown > .dropdown-toggle:active {
            pointer-events: none;
        }
    </style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="HomePage">ShipDock</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="nav navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HomePage">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="clientSystem" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Kliento aptarnavimas
                            </a>
                            <div class="dropdown-menu" aria-labelledby="clientSystem">
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Registruoti krovinį</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Mano kroviniai</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Krovinio atsiėmimas</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="ControlSystem" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Valdymas
                            </a>
                            <div class="dropdown-menu" aria-labelledby="ControlSystem">
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Patvirtinti atvykusius laivus</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Sudaryti laivų grafiką</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Aikštelių statistika</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="AdminSystem" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Administratoriams
                            </a>
                            <div class="dropdown-menu" aria-labelledby="AdminSystem">
                                <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="ShipSearch">Laivai</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="LotSearch">Aikštelės</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="UserSearch">Darbuotojai</a>
                            </div>
                        </li>

                    </ul>
                </div>
                <div>
                    <h3>
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ShipDock - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
