@model IEnumerable<Ship>

@{
    ViewData["Title"] = "Laivai";
}

<h1 style="color: white;">
    @ViewData["Title"].ToString()
</h1>
<h2 style="color: white;">Įvedimas</h2>
<div>
    @Html.Partial("ShipInsertForm", new Ship())
</div>
<br />
<h2 style="color: white;">Laivų sąrašas</h2>
<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th style="color: white;" scope="col">ID</th>
            <th style="color: white;" scope="col">Modelis</th>
            <th style="color: white;" scope="col">Ilgis</th>
            <th style="color: white;" scope="col">Plotis</th>
            <th style="color: white;" scope="col">Aukštis</th>
            <th style="color: white;" scope="col">Veiksmas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ship in Model)
        {
            <tr style="color: white;">
                <td style="color: white;">
                    @ship.ID
                </td>
                <td>
                    @ship.Model
                </td>
                <td>
                    @ship.Length
                </td>
                <td>
                    @ship.Width
                </td>
                <td>
                    @ship.Height
                </td>
                <td>
                    <form asp-controller="Admin" asp-action="DeleteShip" method="post">
                        <input type="hidden" name="id" value="@ship.ID" />
                        <button type="submit" class="btn btn-danger">Ištrinti</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>